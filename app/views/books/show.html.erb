<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'shared/userinfo', book: @book_new, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= image_tag @user.get_profile_image(100,100) %><br />
            <%= link_to @book.user.name, user_path%>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td>
              <%= link_to edit_book_path(@book.id), class:"btn btn-sm btn-success" do %>
              Edit
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger" do %>
              Destroy
              <% end %>
            </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>