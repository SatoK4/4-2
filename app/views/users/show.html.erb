<!--ユーザー情報-->
<h2>User info</h2>
<%= image_tag @user.get_profile_image(100,100) %>
<table>
  <tr>
    <th>name</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
  </tr>
</table>
<% if @user == current_user %>
  <!--editへ遷移先を設定-->
  <%= link_to edit_user_path(current_user.id) do %>
    <i class="fa-solid fa-user-gear" style="color: #6c757d;"></i>
  <% end %>
<% else %>
  <!--マイページへ遷移-->
  <%= link_to user_path(current_user.id) do %>
    <i class="fa-solid fa-user-gear" style="color: #6c757d;"></i>
  <% end %>
<% end %>

<!--新規投稿フォーム-->
<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <label for = "book_title">Title</label><br />
  <%= f.text_field :title %><br />
  <label for = "book_opinion">Opinion</label><br />
  <%= f.text_area :body %><br />

  <%=f.submit 'Create Book' %>
<% end %>


<h2>Books</h2>
<table>
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag current_user.get_profile_image(100,100) %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    <% end %>
    </tr>
  </tbody>
  </tbody>
</table>